extends layout

block content
  h1= title
  p Welcome to #{title} <br>
  console.log(`rows ${query.rows}`)

  p the value of query.rows is #{query.rows} and the value of query.cols is #{query.cols}

  -
    let rows = Number(query.rows)
    let cols = Number(query.cols)

    function getConvert(num1, num2){
      if((num1+1-num2) < 0){
        return 0;
      }
      else{
        return num1 + 1 - num2
      }
    }

  unless(Number.isInteger(rows) && Number.isInteger(cols))
    p rows or columns is not an integer 
  unless(rows > 1 && rows < 10 && cols > 1 && cols < 10)
    p rows or columns are less than 1 or greater than 10
  else
    p everything is good 
    table#outer
      - for(let i=0; i<rows; i++) {
        tr#middle
          - for(let j=0; j<cols; j++) {
              td= getConvert(j,i)
          -}
      -}


